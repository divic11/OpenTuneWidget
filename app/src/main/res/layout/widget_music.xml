<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_material_bg"
    android:clickable="true"
    android:focusable="true">

    <!-- Fondo degradado dinámico (puedes mejorar con un drawable personalizado y color dinámico) -->
    <ImageView
        android:id="@+id/widget_album_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.35"
        android:contentDescription="@string/album_art_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp"
        android:gravity="center">

        <!-- Carátula con círculo y fallback si no hay imagen -->
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/widget_album_art_circle"
            android:contentDescription="@string/album_art" />

        <TextView
            android:id="@+id/widget_song_title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/widget_artist"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center" />

        <!-- Barra de progreso interactiva (seek) -->
        <ProgressBar
            android:id="@+id/widget_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:progressTint="@color/colorAccent"
            android:progress="0"
            android:max="100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp">

            <ImageButton
                android:id="@+id/widget_prev"
                style="@style/Widget.WidgetButton"
                android:src="@drawable/prev"
                android:contentDescription="@string/prev"
                android:background="@drawable/widget_control_bg" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                style="@style/Widget.WidgetButton"
                android:src="@drawable/play"
                android:contentDescription="@string/play_pause"
                android:background="@drawable/widget_control_bg"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <ImageButton
                android:id="@+id/widget_next"
                style="@style/Widget.WidgetButton"
                android:src="@drawable/next"
                android:contentDescription="@string/next"
                android:background="@drawable/widget_control_bg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <ImageButton
                android:id="@+id/widget_shuffle"
                style="@style/Widget.WidgetButtonSmall"
                android:src="@drawable/shuffle"
                android:contentDescription="@string/shuffle"
                android:background="@drawable/widget_control_bg_small" />

            <ImageButton
                android:id="@+id/widget_like"
                style="@style/Widget.WidgetButtonSmall"
                android:src="@drawable/favorite_border"
                android:contentDescription="@string/like"
                android:background="@drawable/widget_control_bg_small"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

            <ImageButton
                android:id="@+id/widget_lyrics"
                style="@style/Widget.WidgetButtonSmall"
                android:src="@drawable/lyrics"
                android:contentDescription="@string/lyrics"
                android:background="@drawable/widget_control_bg_small" />

            <TextView
                android:id="@+id/widget_next_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorSecondary"
                android:textStyle="italic"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="12dp"
                android:text="@string/next_song" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
